<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.business.dao.MemoryDao">
    <sql id="Base_Memory">
        memory_id,number,game_name,create_time
    </sql>

    <insert id="addMemory" parameterType="com.hxy.nettygo.result.base.entry.backStageBean.JVMmemory">
        INSERT INTO jvm_memory(
        <include refid="Base_Memory"/>
        )
        values ( #{memoryId},#{number},#{gameName},#{createTime})
    </insert>


    <select id="selectJVMInfoByNameAndTime" resultType="java.util.Map">
        select number,DATE_FORMAT(create_time,'%H:%i')as time from jvm_memory
        <where>
            jvm_memory.create_time like concat(#{time},'%')
            <if test="gameName!=null and gameName!=''">
                and game_name = #{gameName}
            </if>
        </where>
        GROUP by time
    </select>
</mapper>