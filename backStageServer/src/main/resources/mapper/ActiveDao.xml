<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.business.dao.ActiveDao">
    <sql id="Base_Active">
        active_id,active_count,create_time,game_name
    </sql>

    <insert id="addActive" parameterType="com.hxy.nettygo.result.base.entry.backStageBean.ActiveCount">
        INSERT INTO active_count(
        <include refid="Base_Active"/>
        )
        values ( #{activeId},#{activeCount},#{createTime},#{gameName})
    </insert>


    <select id="selectSevenDayActiveCount" resultType="com.hxy.nettygo.result.base.entry.backStageBean.ActiveCount">
        select
        <include refid="Base_Active"/>
        from active_count
        <where>
            <if test="gameName!=null and gameName!=''">
                and game_name = #{gameName}
            </if>
            <if test="time!=null and time1=''">
                and create_time = #{time}
            </if>
        </where>
        order by create_time desc
        limit 0,7;
    </select>
</mapper>