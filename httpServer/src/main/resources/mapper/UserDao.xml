<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.business.dao.UserDao">
    <!-- 所有字段 -->
	<sql id="Base_User" >
    user_id,user_name,sex,open_id,create_time,phone_num,user_img,introduct
  	</sql>
	<!--END -->



	
	
	<insert id="addUser" parameterType="com.business.bean.User">
		INSERT INTO user(
		<include refid="Base_User" />
		)
		values ( #{userId},#{userName},#{sex},#{openId},#{createTime},#{phoneNum},#{userImg},#{introduct})
	</insert>

	<!-- 根据openId寻找user -->
	<select id="findUserByOpenId" parameterType="java.lang.String" resultType="com.business.bean.User">
		select
		<include refid="Base_User"/>
		from user where open_id =#{openId}
	</select>

</mapper>